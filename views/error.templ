package views

import "github.com/leedrum/ikarus_travel/locales"

templ Error(err_msg string) {
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
    <strong class="font-bold">{ locales.Translate(ctx, "error") }!</strong>
    <span class="block sm:inline" id="error-area">{ err_msg }</span>
  </div>
}
